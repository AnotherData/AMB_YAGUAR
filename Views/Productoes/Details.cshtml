@model AMB_YAGUAR.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del Producto</h2>

    <div class="form-group">
        <label class="control-label">Nombre</label>
        <p class="form-control-static">@Model.Nombre</p>
    </div>
    <div class="form-group">
        <label class="control-label">Descripción</label>
        <p class="form-control-static">@Model.Descripcion</p>
    </div>
    <div class="form-group">
        <label class="control-label">Categoría</label>
        <p class="form-control-static">@Model.Categoria</p>
    </div>
    <div class="form-group">
        <label class="control-label">Fecha de Ingreso</label>
        <p class="form-control-static">@Model.Fechaingreso</p>
    </div>
    <div class="form-group">
        <label class="control-label">Precio</label>
        <p class="form-control-static">@Model.Precio</p>
    </div>
    <div class="form-group">
        <label class="control-label">Stock</label>
        <p class="form-control-static">@Model.Stock</p>
    </div>
    <div class="form-group">
        <label class="control-label">Imagen</label>
        <img src="@Model.Imagen" alt="Imagen de @Model.Nombre" class="img-fluid" style="max-width: 100px; max-height: 100px;" />
    </div>

    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Idproducto" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
